@using Proyecto_WEB.Models
@model Proyecto_WEB.Models.Empleado

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Registrar Empleado</h1>

<h2>@ViewData["Title"]</h2>

<form asp-action="Registrar" asp-controller="Empleado">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre">
    </div>

    <div class="mb-3">
        <label class="form-label">Apellidos</label>
        <input type="text" asp-for="Apellidos" class="form-control" placeholder="Ingresa los apellidos">
    </div>

    <div class="mb-3">
        <label class="form-label">Usuario Asociado</label>
        <input type="number" asp-for="UsuarioID" class="form-control" placeholder="ID del usuario">
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha de Nacimiento</label>
        <input type="date" asp-for="FechaNacimiento" class="form-control">
    </div>

    <div class="mb-3">
        <label class="form-label">Teléfono</label>
        <input type="text" asp-for="Telefono" class="form-control" placeholder="Número de teléfono">
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Correo electrónico">
    </div>

    <div class="mb-3">
        <label class="form-label">Dirección</label>
        <input type="text" asp-for="Direccion" class="form-control" placeholder="Dirección completa">
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha de Contratación</label>
        <input type="date" asp-for="FechaContratacion" class="form-control">
    </div>

    <div class="mb-3">
        <label class="form-label">Cargo</label>
        <select asp-for="CargoID" class="form-select">
            <option value="">Selecciona un cargo</option>
         
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Registrar Empleado</button>
</form>
