@model Proyecto_WEB.Models.PlanEntrenamiento

@{
    ViewData["Title"] = "Plan de Entrenamiento";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (Model != null)
    {
        <div class="card mt-4 shadow-lg">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <img src="/images/planEntrenamiento.jpg" alt="Icono de Plan" class="mr-3" style="width: 40px; height: 40px;">
                <h4 class="m-0">Ejercicio: @Model.Ejercicio</h4>
            </div>

            <div class="card-body">
                <p class="card-text"><strong>Repeticiones:</strong> @Model.Repeticiones</p>
                <p class="card-text"><strong>Peso:</strong> @Model.Peso kg</p>
                <p class="card-text"><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</p>
            </div>

            <div class="card-footer text-muted text-center">
                <p>Recuerda que los planes pueden ajustarse en función de tus avances. Si necesitas cambios, no dudes en contactarnos.</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger mt-4">
            <strong>¡Error!</strong> @ViewBag.Error
        </div>
    }
</div>
