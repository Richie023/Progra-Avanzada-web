@model Proyecto_WEB.Models.Usuario
@{
    ViewData["Title"] = "Change Page";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}


<div class="az-body">
    <div class="az-signin-wrapper">
        <div class="az-card-signin">
            <div class="az-signin-header">
                <h2>Cambiar contraseña</h2>
                <form asp-action="ChangePassword" asp-controller="Login">
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" asp-for="Contrasenna" class="form-control" placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <label>Confirmar contraseña</label>
                        <input type="password" asp-for="ConfirmarContrasenna" class="form-control" placeholder="Confirmar contraseña">
                    </div>
                    <button type="submit" class="btn btn-az-primary btn-block">Iniciar sesión</button>
                </form>
                @{
                    if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-secondary text-center pt-2">@ViewBag.Mensaje</div>
                    }
                }
            </div>
        </div>
    </div>
</div>