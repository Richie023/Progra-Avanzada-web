@model List<Proyecto_WEB.Models.Progreso>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Progreso</h1>

<div class="container-fluid">
    <h2 class="mb-4">Lista de Progresos</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    @if (Model.Count > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Progresión de Entrenamiento</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="progressChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <table class="table table-hover table-responsive-sm">
                    <thead class="thead-light">
                        <tr>
                            <th>Plan de Entrenamiento</th>
                            <th>Peso (kg)</th>
                            <th>Repeticiones</th>
                            <th>Tiempo (min)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PlanEntrenamientoID</td>
                                <td>@item.PesoEntrenamiento kg</td>
                                <td>@item.RepeticionesCompletadas</td>
                                <td>@item.TiempoEntrenamiento min</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p class="mb-0">No hay registros de progreso disponibles.</p>
        </div>
    }

    <div class="mt-3">
        <a asp-action="CrearProgreso" class="btn btn-primary">
            <i class="fas fa-plus"></i> Registrar Nuevo Progreso
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('progressChart').getContext('2d');

            // Datos serializados correctamente desde el lado del servidor
            var progresos = @Html.Raw(Json.Serialize(Model.OrderBy(p => p.FechaRegistro)));

            var chart = new Chart(ctx, {
                type: 'line',
                data: {
                    // Usar propiedades con la capitalización correcta
                    labels: progresos.map(p => new Date(p.FechaRegistro).toLocaleDateString()),
                    datasets: [
                        {
                            label: 'Peso (kg)',
                            data: progresos.map(p => p.PesoEntrenamiento),
                            borderColor: 'rgba(75, 192, 192, 1)',
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            tension: 0.1
                        },
                        {
                            label: 'Repeticiones',
                            data: progresos.map(p => p.RepeticionesCompletadas),
                            borderColor: 'rgba(255, 99, 132, 1)',
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            tension: 0.1
                        },
                        {
                            label: 'Tiempo (min)',
                            data: progresos.map(p => p.TiempoEntrenamiento),
                            borderColor: 'rgba(54, 162, 235, 1)',
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            tension: 0.1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Progresión de Entrenamiento'
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Valores'
                            }
                        }
                    }
                }
            });
        });
    </script>
}