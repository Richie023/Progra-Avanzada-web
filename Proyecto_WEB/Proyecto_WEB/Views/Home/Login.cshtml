@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>

    <title>Login</title>


    <link href="~/pages/css/all.min.css" rel="stylesheet">
    <link href="~/pages/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/pages/typicons.font/typicons.css" rel="stylesheet">


    <link rel="stylesheet" href="~/pages/css/azia.css">

</head>
<body class="az-body">


    <div class="az-signin-wrapper">
        <div class="az-card-signin">
            <a  asp-area="" asp-controller="Home" asp-action="Index"><h1 class="az-logo">Flexigym</h1></a> 
            <div class="az-signin-header">
                <h2>Bienvenido</h2>
                <h4>Inicie sesion para continuar</h4>

                <form action="@Url.Action("Index", "Home")">
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" class="form-control" placeholder="Ingrese su correo" value="">
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" class="form-control" placeholder="Ingrese su contraseña" value="">
                    </div>
                    <button class="btn btn-az-primary btn-block">Iniciar sesion</button>
                </form>
            </div>
            <div class="az-signin-footer">
                <p><a href="">Olvido su contraseña?</a></p>
                <p>No tienes una cuenta? <a href="@Url.Action("Registrar", "Home")">Crear una cuenta</a></p>
            </div>
        </div>
    </div>

    <script src="~/pages/jquery/jquery.min.js"></script>
    <script src="~/pages/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/pages/ionicons/ionicons.js"></script>

    <script src="~/pages/js/azia.js"></script>

</body>
</html>